<section>
    <header class="major">
        <h2>{% if title %}{{title}}{% else %}Latest posts{% endif %}</h2>
    </header>
    <div class="posts">
        {% for post in posts %}
            {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] with {post:post} %}
        {% endfor %}
    </div>
</section>